    "@typescript-eslint/parser": "^5.10.1",
    "@vercel/ncc": "^0.33.1",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^26.0.0",
    "jest": "^27.4.7",
